RUN dnf install -y \
	dnf-plugin-config-manager \
	epel-release

RUN dnf config-manager -y --set-enabled crb
RUN dnf -y copr enable rhcontainerbot/qm centos-stream-9

RUN dnf install -y \
	clang-tools-extra \
        codespell \
        bzip2 \
        gcc \
        meson \
	hostname \
	podman \
	sudo \
        iptables-services \
        selinux-policy-targeted \
        selinux-policy-devel \
	systemd \
        valgrind \
	createrepo_c \
        dnf-utils \
        git \
        gzip \
        jq \
	container-selinux \
	kernel \
	kernel-modules \
	passwd \
	python3-gobject \
	python3-pip \
        meson \
        rpm-build \
        sed \
        vim-enhanced \
        systemd-devel \
	iputils \
        tar \
        golang-github-cpuguy83-md2man \
	telnet \
	net-tools \
	iproute


WORKDIR /root

RUN dnf -y copr enable mperina/hirte-snapshot centos-stream-9
